{{!
    @template theme_charteredcollege/course_modchooser_modal
    Example context (json):
    {
        "tabs": {
            "activities":
                [{
                    "name":"modname",
                    "title":"Mod human name",
                    "icon":"/theme/image.php/charteredcollege/assign/0/icon",
                    "link":"http://google.com",
                    "help":"help text"
                }],
            "resources":
                [{
                    "name":"resourcename",
                    "title":"Mod human name",
                    "icon":"/theme/image.php/charteredcollege/assign/0/icon",
                    "link":"http://google.com",
                    "help":"help text"
                }]
        }
    }
}}

<!-- Modal -->
<div data-section="0" class="modal fade" id="charteredcollege-modchooser-modal" tabindex="-1" role="dialog" aria-labelledby="charteredcollege-modchooser-title" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="modchooser-accessible-tab">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{{#str}}closebuttontitle{{/str}}">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h6 class="modal-title" id="charteredcollege-modchooser-title">{{#str}}addresourceoractivity, theme_charteredcollege{{/str}}</h6>
            </div>
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="tab active">
                    <a id="activites-tab" class="nav-link" href="#activites" role="tab" aria-controls="activites" data-toggle="tab" tabindex="0">{{#str}}activities{{/str}}</a>
                </li>
                <li class="tab">
                    <a id="resources-tab" class="nav-link" href="#resources" role="tab" aria-controls="resources" data-toggle="tab" tabindex="-1">{{#str}}resources{{/str}}</a>
                </li>
                <li class="tab" role="tab" data-toggle="tab" id="charteredcollege-modchooser-help-tab">
                    <a id="help-guide-tab" class="nav-link iconhelp" href="#help" role="tab" aria-controls="help" data-toggle="tab" tabindex="-1">{{#str}}helpguide, theme_charteredcollege{{/str}} {{#pix}}help, theme_charteredcollege, {{#str}}helpguide, theme_charteredcollege{{/str}}{{/pix}}</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div id="accessible-tab-content" class="tab-content" aria-live="polite">
                <br>
                {{#tabs}}
                    <div class="tab-pane row text-center fade in" id="activites" role="tabpanel" aria-labelledby="activites-tab" aria-hidden="false" tabindex="0">
                        {{#activities}}
                            <div class="col-xs-3 charteredcollege-modchooser-activity">
                                <a class="charteredcollege-modchooser-addlink" href="{{{link}}}"><img src="{{icon}}" class="svg-icon" alt="" role="presentation"><br>{{title}}</a>
                            </div>
                        {{/activities}}
                    </div>
                    <div class="tab-pane fade row text-center" id="resources" role="tabpanel" aria-labelledby="resources-tab" aria-hidden="true" tabindex="0">
                        {{#resources}}
                            <div class="col-xs-3 charteredcollege-modchooser-resource">
                                <a class="charteredcollege-modchooser-addlink" href="{{{link}}}"><img src="{{icon}}" class="svg-icon" alt="" role="presentation"><br>{{title}}</a>
                            </div>
                        {{/resources}}
                    </div>
                    <div class="tab-pane fade row text-center" id="help" role="tabpanel" aria-labelledby="help-guide-tab" aria-hidden="true" tabindex="0">
                        {{#activities}}
                            <div class="col-xs-3 charteredcollege-modchooser-activity" id="charteredcollege-modchooser_{{name}}">
                                <a class="charteredcollege-modchooser-addlink" href="{{{link}}}"><img src="{{icon}}" class="svg-icon" alt="" role="presentation"><br>{{title}}</a>
                            </div>
                            <div class="col-xs-8 charteredcollege-modchooser-help">
                                {{{help}}}
                            </div>
                            <div class="col-xs-12"><hr></div>
                        {{/activities}}
                        {{#resources}}
                            <div class="col-xs-3 charteredcollege-modchooser-resource" id="charteredcollege-modchooser_{{name}}">
                                <a class="charteredcollege-modchooser-addlink" href="{{{link}}}"><img src="{{icon}}" class="svg-icon" alt="" role="presentation"><br>{{title}}</a>
                            </div>
                            <div class="col-xs-8 charteredcollege-modchooser-help">
                                {{{help}}}
                            </div>
                            <div class="col-xs-12"><hr></div>
                        {{/resources}}
                    </div>
                {{/tabs}}
                <br>
            </div>
        </div>
    </div>
</div>
